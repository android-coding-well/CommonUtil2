            app:indicator_color="@color/white" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            app:indicator="LineSpinFadeLoader"
            app:indicator_color="@color/white" />
    </LinearLayout>

    <LinearLayout
